<p id="notice"><%= notice %></p>

<div class="container"  >
  <div class="row">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-8" >
      <div class="card" style="border: 3px solid rgba(255, 87, 0, 0.93)">
        <div class="card-header" align="middle" style="background-color: rgba(255, 87, 0, 0.93); color:  white;">
          <h2>Thank you for your order !</h2>
        </div>
        <div class="card-block">
          <h4 class="card-title">Your order detail:</h4>
          <div class="row">
            <div class="col-md-3">Name</div>
            <div class="col-md-9"><%= @order.name %></div>
          </div>
          <div class="row">
            <div class="col-md-3">Phone</div>
            <div class="col-md-9"><%= @order.phone %></div>
          </div>
          <div class="row">
            <div class="col-md-3">Address</div>
            <div class="col-md-9"><%= @order.address %></div>
          </div>
          <div class="row">
            <div class="col-md-3">Email</div>
            <div class="col-md-9"><%= @order.email %></div>
          </div>
          <div class="row" style="background-color: rgba(255, 87, 0, 0.93); color:  white;">
            <div class="col-md-3"></div>
          </div>
          <div class="row">
            <div class="col-md-3">Food item</div>
            <div class="col-md-9"><%= @food_item.name %></div>
          </div>
          <div class="row">
            <div class="col-md-3">Food price</div>
            <div class="col-md-9">VND <%= @food_item.price %></div>
          </div>
          <div class="row">
            <div class="col-md-3">Shipping fee</div>
            <div class="col-md-9">VND <%= @order.shipping_price %></div>
          </div>
          <div class="row">
            <div class="col-md-3">Total price</div>
            <div class="col-md-9"><strong>VND <%= @order.final_price %></strong></div>
          </div>
          <div class="row" style="background-color: rgba(255, 87, 0, 0.93); color:  white;">
            <div class="col-md-3"></div>
          </div>
          <small><i>Order created: <%= @order.created_at.strftime("%A, %d %B %Y, %H:%M") %></i></small>
        </div>
        <div class="card-footer" align="middle" style="background-color: rgba(255, 87, 0, 0.93); color:  white;">
          <a href="/menus" class="btn btn-secondary">Back to menu</a>
        </div>
      </div>
    </div>
    <div class="col-sm-2">
    </div>
  </div>
</div>
